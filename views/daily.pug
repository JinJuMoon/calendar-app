extends layout
include mixins

block content
    .calendar-container
        .calendar-header
            button#today.btn.btn-light Today
            .ico-arrow
                a#prevDate(data-toggle='tooltip', data-placement='top', title='이전')
                    i.material-icons chevron_left
                a#nextDate(data-toggle='tooltip', data-placement='top', title='다음')
                    i.material-icons chevron_right
            h4#cal-date
            ul#view.nav.nav-tabs.view-tab(role='tablist')
                li.nav-item
                    a#tab-month.nav-link(href='/' aria-controls='month', aria-selected='false') &#xC6D4;
                li.nav-item
                    a#tab-day.nav-link(href='daily', aria-controls='day', aria-selected='true') &#xC77C;
        .daily-calendar
            each schedule in dailyScheduleArray
                +scheduleBlock(schedule)
    +registerBlock